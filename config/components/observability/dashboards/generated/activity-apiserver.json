{
   "description": "High-level overview of Activity API Server health, performance, and usage patterns",
   "editable": true,
   "graphTooltip": 1,
   "panels": [
      {
         "datasource": {
            "type": "prometheus",
            "uid": "$datasource"
         },
         "description": "Percentage of healthy Activity API Server replicas. May temporarily drop during deployments",
         "fieldConfig": {
            "defaults": {
               "decimals": 1,
               "thresholds": {
                  "steps": [
                     {
                        "color": "red",
                        "value": null
                     },
                     {
                        "color": "yellow",
                        "value": 50
                     },
                     {
                        "color": "green",
                        "value": 100
                     }
                  ]
               },
               "unit": "percent"
            }
         },
         "gridPos": {
            "h": 5,
            "w": 6,
            "x": 0,
            "y": 0
         },
         "id": 1,
         "options": {
            "colorMode": "background",
            "graphMode": "none",
            "reduceOptions": {
               "calcs": [
                  "lastNotNull"
               ]
            },
            "textMode": "value"
         },
         "pluginVersion": "v11.4.0",
         "targets": [
            {
               "datasource": {
                  "type": "prometheus",
                  "uid": "$datasource"
               },
               "expr": "(count(up{job=\"activity-apiserver\"} == 1) or vector(0)) / (count(up{job=\"activity-apiserver\"}) or vector(1)) * 100",
               "instant": true,
               "legendFormat": "Replica Health"
            }
         ],
         "title": "Replica Health",
         "type": "stat"
      },
      {
         "datasource": {
            "type": "prometheus",
            "uid": "$datasource"
         },
         "description": "Percentage of non-5xx responses. Target: >99.9%",
         "fieldConfig": {
            "defaults": {
               "decimals": 2,
               "thresholds": {
                  "steps": [
                     {
                        "color": "red",
                        "value": null
                     },
                     {
                        "color": "yellow",
                        "value": 99
                     },
                     {
                        "color": "green",
                        "value": 99.900000000000006
                     }
                  ]
               },
               "unit": "percent"
            }
         },
         "gridPos": {
            "h": 5,
            "w": 6,
            "x": 6,
            "y": 0
         },
         "id": 2,
         "options": {
            "colorMode": "background",
            "graphMode": "area",
            "reduceOptions": {
               "calcs": [
                  "lastNotNull"
               ]
            }
         },
         "pluginVersion": "v11.4.0",
         "targets": [
            {
               "datasource": {
                  "type": "prometheus",
                  "uid": "$datasource"
               },
               "expr": "(1 - activity:error_rate:5m) * 100",
               "legendFormat": "Success Rate"
            }
         ],
         "title": "Success Rate",
         "type": "stat"
      },
      {
         "datasource": {
            "type": "prometheus",
            "uid": "$datasource"
         },
         "description": "Total API requests per second",
         "fieldConfig": {
            "defaults": {
               "decimals": 1,
               "unit": "reqps"
            }
         },
         "gridPos": {
            "h": 5,
            "w": 6,
            "x": 12,
            "y": 0
         },
         "id": 3,
         "options": {
            "colorMode": "value",
            "graphMode": "area",
            "reduceOptions": {
               "calcs": [
                  "lastNotNull"
               ]
            }
         },
         "pluginVersion": "v11.4.0",
         "targets": [
            {
               "datasource": {
                  "type": "prometheus",
                  "uid": "$datasource"
               },
               "expr": "activity:request_rate_total:5m",
               "legendFormat": "Requests/s"
            }
         ],
         "title": "Request Rate",
         "type": "stat"
      },
      {
         "datasource": {
            "type": "prometheus",
            "uid": "$datasource"
         },
         "description": "99th percentile API response time. Target: <2s",
         "fieldConfig": {
            "defaults": {
               "decimals": 2,
               "thresholds": {
                  "steps": [
                     {
                        "color": "green",
                        "value": null
                     },
                     {
                        "color": "yellow",
                        "value": 2
                     },
                     {
                        "color": "red",
                        "value": 5
                     }
                  ]
               },
               "unit": "s"
            }
         },
         "gridPos": {
            "h": 5,
            "w": 6,
            "x": 18,
            "y": 0
         },
         "id": 4,
         "options": {
            "colorMode": "background",
            "graphMode": "area",
            "reduceOptions": {
               "calcs": [
                  "lastNotNull"
               ]
            }
         },
         "pluginVersion": "v11.4.0",
         "targets": [
            {
               "datasource": {
                  "type": "prometheus",
                  "uid": "$datasource"
               },
               "expr": "activity:apiserver_request_duration:p99",
               "legendFormat": "p99 Latency"
            }
         ],
         "title": "Latency (p99)",
         "type": "stat"
      },
      {
         "datasource": {
            "type": "prometheus",
            "uid": "$datasource"
         },
         "description": "Total API requests per second over time",
         "fieldConfig": {
            "defaults": {
               "custom": {
                  "fillOpacity": 10,
                  "lineWidth": 2,
                  "showPoints": "never"
               },
               "unit": "reqps"
            }
         },
         "gridPos": {
            "h": 8,
            "w": 12,
            "x": 0,
            "y": 5
         },
         "id": 5,
         "options": {
            "legend": {
               "displayMode": "list",
               "placement": "bottom",
               "showLegend": true
            }
         },
         "pluginVersion": "v11.4.0",
         "targets": [
            {
               "datasource": {
                  "type": "prometheus",
                  "uid": "$datasource"
               },
               "expr": "activity:request_rate_total:5m",
               "legendFormat": "Requests/s"
            }
         ],
         "title": "Request Rate",
         "type": "timeseries"
      },
      {
         "datasource": {
            "type": "prometheus",
            "uid": "$datasource"
         },
         "description": "Percentage of 5xx errors. SLO target: <0.1%",
         "fieldConfig": {
            "defaults": {
               "custom": {
                  "fillOpacity": 10,
                  "lineWidth": 2,
                  "showPoints": "never",
                  "thresholdsStyle": {
                     "mode": "line"
                  }
               },
               "min": 0,
               "thresholds": {
                  "steps": [
                     {
                        "color": "green",
                        "value": null
                     },
                     {
                        "color": "yellow",
                        "value": 0.001
                     },
                     {
                        "color": "red",
                        "value": 0.01
                     }
                  ]
               },
               "unit": "percentunit"
            }
         },
         "gridPos": {
            "h": 8,
            "w": 12,
            "x": 12,
            "y": 5
         },
         "id": 6,
         "options": {
            "legend": {
               "displayMode": "list",
               "placement": "bottom",
               "showLegend": true
            }
         },
         "pluginVersion": "v11.4.0",
         "targets": [
            {
               "datasource": {
                  "type": "prometheus",
                  "uid": "$datasource"
               },
               "expr": "activity:error_rate:5m",
               "legendFormat": "Error Rate"
            }
         ],
         "title": "Error Rate",
         "type": "timeseries"
      },
      {
         "datasource": {
            "type": "prometheus",
            "uid": "$datasource"
         },
         "description": "Request latency distribution. Most requests should complete quickly",
         "fieldConfig": {
            "defaults": {
               "custom": {
                  "fillOpacity": 10,
                  "showPoints": "never"
               },
               "unit": "s"
            }
         },
         "gridPos": {
            "h": 8,
            "w": 12,
            "x": 0,
            "y": 13
         },
         "id": 7,
         "options": {
            "legend": {
               "calcs": [
                  "lastNotNull",
                  "mean",
                  "max"
               ],
               "displayMode": "table",
               "placement": "bottom",
               "showLegend": true
            }
         },
         "pluginVersion": "v11.4.0",
         "targets": [
            {
               "datasource": {
                  "type": "prometheus",
                  "uid": "$datasource"
               },
               "expr": "activity:apiserver_request_duration:p99",
               "legendFormat": "p99"
            },
            {
               "datasource": {
                  "type": "prometheus",
                  "uid": "$datasource"
               },
               "expr": "activity:apiserver_request_duration:p95",
               "legendFormat": "p95"
            },
            {
               "datasource": {
                  "type": "prometheus",
                  "uid": "$datasource"
               },
               "expr": "activity:apiserver_request_duration:p50",
               "legendFormat": "p50"
            }
         ],
         "title": "API Latency Percentiles",
         "type": "timeseries"
      },
      {
         "datasource": {
            "type": "prometheus",
            "uid": "$datasource"
         },
         "description": "Backend query latency. Target: <5s for p99",
         "fieldConfig": {
            "defaults": {
               "custom": {
                  "fillOpacity": 10,
                  "lineWidth": 2,
                  "showPoints": "never",
                  "thresholdsStyle": {
                     "mode": "line"
                  }
               },
               "thresholds": {
                  "steps": [
                     {
                        "color": "green",
                        "value": null
                     },
                     {
                        "color": "yellow",
                        "value": 5
                     },
                     {
                        "color": "red",
                        "value": 10
                     }
                  ]
               },
               "unit": "s"
            }
         },
         "gridPos": {
            "h": 8,
            "w": 12,
            "x": 12,
            "y": 13
         },
         "id": 8,
         "options": {
            "legend": {
               "displayMode": "list",
               "placement": "bottom",
               "showLegend": true
            }
         },
         "pluginVersion": "v11.4.0",
         "targets": [
            {
               "datasource": {
                  "type": "prometheus",
                  "uid": "$datasource"
               },
               "expr": "activity:query_duration:p99",
               "legendFormat": "p99 Query Duration"
            }
         ],
         "title": "ClickHouse Query Duration (p99)",
         "type": "timeseries"
      },
      {
         "datasource": {
            "type": "prometheus",
            "uid": "$datasource"
         },
         "description": "Query success vs error rate from ClickHouse backend",
         "fieldConfig": {
            "defaults": {
               "custom": {
                  "fillOpacity": 30,
                  "showPoints": "never",
                  "stacking": {
                     "mode": "normal"
                  }
               },
               "unit": "ops"
            }
         },
         "gridPos": {
            "h": 8,
            "w": 12,
            "x": 0,
            "y": 21
         },
         "id": 9,
         "options": {
            "legend": {
               "calcs": [
                  "lastNotNull",
                  "mean"
               ],
               "displayMode": "table",
               "placement": "bottom",
               "showLegend": true
            }
         },
         "pluginVersion": "v11.4.0",
         "targets": [
            {
               "datasource": {
                  "type": "prometheus",
                  "uid": "$datasource"
               },
               "expr": "activity:query_rate:5m",
               "legendFormat": "{{status}}"
            }
         ],
         "title": "ClickHouse Query Status",
         "type": "timeseries"
      },
      {
         "datasource": {
            "type": "prometheus",
            "uid": "$datasource"
         },
         "description": "Number of events returned per query. Large p99 (>10k) may indicate overly broad queries",
         "fieldConfig": {
            "defaults": {
               "custom": {
                  "fillOpacity": 10,
                  "showPoints": "never"
               },
               "unit": "short"
            }
         },
         "gridPos": {
            "h": 8,
            "w": 12,
            "x": 12,
            "y": 21
         },
         "id": 10,
         "options": {
            "legend": {
               "calcs": [
                  "lastNotNull",
                  "mean",
                  "max"
               ],
               "displayMode": "table",
               "placement": "bottom",
               "showLegend": true
            }
         },
         "pluginVersion": "v11.4.0",
         "targets": [
            {
               "datasource": {
                  "type": "prometheus",
                  "uid": "$datasource"
               },
               "expr": "histogram_quantile(0.99, rate(activity_auditlog_query_results_total_bucket[5m]))",
               "legendFormat": "p99"
            },
            {
               "datasource": {
                  "type": "prometheus",
                  "uid": "$datasource"
               },
               "expr": "histogram_quantile(0.95, rate(activity_auditlog_query_results_total_bucket[5m]))",
               "legendFormat": "p95"
            },
            {
               "datasource": {
                  "type": "prometheus",
                  "uid": "$datasource"
               },
               "expr": "histogram_quantile(0.50, rate(activity_auditlog_query_results_total_bucket[5m]))",
               "legendFormat": "p50"
            }
         ],
         "title": "Result Set Sizes",
         "type": "timeseries"
      },
      {
         "datasource": {
            "type": "prometheus",
            "uid": "$datasource"
         },
         "description": "Query distribution across tenant boundaries",
         "fieldConfig": {
            "defaults": {
               "custom": {
                  "fillOpacity": 30,
                  "showPoints": "never",
                  "stacking": {
                     "mode": "normal"
                  }
               },
               "unit": "ops"
            }
         },
         "gridPos": {
            "h": 8,
            "w": 12,
            "x": 0,
            "y": 29
         },
         "id": 11,
         "options": {
            "legend": {
               "calcs": [
                  "lastNotNull",
                  "mean"
               ],
               "displayMode": "table",
               "placement": "bottom",
               "showLegend": true
            }
         },
         "pluginVersion": "v11.4.0",
         "targets": [
            {
               "datasource": {
                  "type": "prometheus",
                  "uid": "$datasource"
               },
               "expr": "sum(rate(activity_auditlog_queries_by_scope_total[5m])) by (scope_type)",
               "legendFormat": "{{scope_type}}"
            }
         ],
         "title": "Queries by Scope Type",
         "type": "timeseries"
      },
      {
         "datasource": {
            "type": "prometheus",
            "uid": "$datasource"
         },
         "description": "Client-side filter parsing/evaluation errors",
         "fieldConfig": {
            "defaults": {
               "custom": {
                  "fillOpacity": 30,
                  "showPoints": "never",
                  "stacking": {
                     "mode": "normal"
                  }
               },
               "unit": "ops"
            }
         },
         "gridPos": {
            "h": 8,
            "w": 12,
            "x": 12,
            "y": 29
         },
         "id": 12,
         "options": {
            "legend": {
               "calcs": [
                  "lastNotNull",
                  "mean"
               ],
               "displayMode": "table",
               "placement": "bottom",
               "showLegend": true
            }
         },
         "pluginVersion": "v11.4.0",
         "targets": [
            {
               "datasource": {
                  "type": "prometheus",
                  "uid": "$datasource"
               },
               "expr": "sum(rate(activity_cel_filter_errors_total[5m])) by (error_type)",
               "legendFormat": "{{error_type}}"
            }
         ],
         "title": "CEL Filter Errors",
         "type": "timeseries"
      }
   ],
   "refresh": "30s",
   "schemaVersion": 39,
   "tags": [
      "activity",
      "apiserver",
      "overview",
      "kubernetes"
   ],
   "templating": {
      "list": [
         {
            "label": "Prometheus Datasource",
            "name": "datasource",
            "query": "prometheus",
            "regex": "Service Metrics",
            "type": "datasource"
         }
      ]
   },
   "time": {
      "from": "now-24h",
      "to": "now"
   },
   "timezone": "utc",
   "title": "Activity API Server - Overview",
   "uid": "activity-apiserver"
}
